# Copy to .env and fill in values. Do not commit .env.

NODE_ENV=production
PORT=5000

# MongoDB (e.g. MongoDB Atlas connection string)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/animeweb?retryWrites=true&w=majority

# JWT for customer and admin auth (use a long random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Frontend / store URL (for emails, links, CORS)
STORE_FRONTEND_URL=https://store.animeindia.org
# Backend public URL (for email image links, etc.)
BACKEND_URL=https://api.animeindia.org

# When deploying backend-only (no frontend in repo), set so uploads live inside backend:
# UPLOAD_PATH=uploads

# Store product images on frontend (Hostinger) via FTP so backend (EC2) uses no disk.
# Get FTP details from Hostinger: File Manager / FTP accounts. Create e.g. uploads@store.animeindia.org.
# FTP_UPLOAD_DIR is the path on the server where files go (e.g. public_html/uploads). URL will be STORE_FRONTEND_URL/uploads/filename.
# FTP_SECURE=false if your host uses plain FTP.
# FTP_HOST=ftp.store.animeindia.org
# FTP_USER=uploads@store.animeindia.org
# FTP_PASSWORD=your-ftp-password
# FTP_UPLOAD_DIR=public_html/uploads
# STORE_FRONTEND_URL=https://store.animeindia.org

# Optional: restrict CORS to these origins (comma-separated). If unset, all origins allowed.
# CORS_ORIGINS=https://store.animeindia.org,https://storeadmin.animeindia.org

# Email (SMTP) â€“ for contact form, order emails, abandoned cart
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=465
# EMAIL_SECURE=true
# EMAIL_FROM=noreply@animeindia.org
# EMAIL_PASSWORD=your-app-password
# SUPPORT_EMAIL=support@animeindia.org

# Razorpay (payments)
# RAZORPAY_KEY_ID=
# RAZORPAY_KEY_SECRET=

# Shiprocket (shipping)
# SHIPROCKET_EMAIL=
# SHIPROCKET_PASSWORD=
# SHIPROCKET_PICKUP_LOCATION=Primary
# SHIPROCKET_PICKUP_POSTCODE=110001

# Optional: abandoned cart email script
# ABANDONED_CART_DELAY_HOURS_MIN=2
# ABANDONED_CART_DELAY_HOURS_MAX=24
